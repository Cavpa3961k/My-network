<!DOCTYPE html><html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>MLM 7-Level Tree</title>
  <style>
    body {
      font-family: sans-serif;
      background-color: #f9f9f9;
      padding: 2rem;
      text-align: center;
    }
    .level {
      margin-bottom: 2rem;
    }
    .level h2 {
      margin-bottom: 0.5rem;
    }
    .member-box {
      display: inline-block;
      background: #4caf50;
      color: white;
      padding: 0.5rem 1rem;
      margin: 0.3rem;
      border-radius: 8px;
    }
  </style>
</head>
<body>
  <h1>7-Level MLM Network</h1>
  <div id="tree"></div>  <script>
    const maxLevels = 7;
    const membersPerLevel = [
      1,    // Level 1 (You)
      2,    // Level 2
      4,    // Level 3
      8,    // Level 4
      16,   // Level 5
      32,   // Level 6
      64    // Level 7
    ];

    const treeContainer = document.getElementById("tree");

    for (let level = 0; level < maxLevels; level++) {
      const levelDiv = document.createElement("div");
      levelDiv.className = "level";
      levelDiv.innerHTML = `<h2>Level ${level + 1}</h2>`;

      for (let i = 1; i <= membersPerLevel[level]; i++) {
        const member = document.createElement("div");
        member.className = "member-box";
        member.innerText = `User ${i}`;
        levelDiv.appendChild(member);
      }

      treeContainer.appendChild(levelDiv);
    }
  </script></body>
</html>
